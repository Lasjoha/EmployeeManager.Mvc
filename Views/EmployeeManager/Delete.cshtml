@{
}
@model Employee

<h2>Slett eksisterende ansatt</h2>
<h3 class="message">
    Advarsel : Du er i ferd med å slette en ansatt fra registeret
</h3>
<form asp-controller="EmployeeManager" asp-action="Delete" method="post">
    <input type="hidden" asp-for="EmployeeID" />
    <table border="0">
        <tr>
            <td class="right">
                <label asp-for="EmployeeID"></label> :
            </td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="FirstName"></label> :
            </td>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit">Slett</button>
            </td>
        </tr>
    </table>
</form>
<br /><br />
<a asp-controller="EmployeeManager" asp-action="List">Tilbake til ansatt liste</a>